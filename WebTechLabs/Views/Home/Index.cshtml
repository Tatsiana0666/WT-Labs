@{
    ViewBag.Title = "Главная страница";
}

<div class="row mt-2">
    <h3>@ViewData["Text"]</h3>
    <h4 class="mt-2">Список</h4>
    <div>
        <ol type="A">
            @for (int i = 1; i < 5; i++)
            {
                <li>элемент @i списка</li>
            }
        </ol>
    </div>

</div>
<hr />
<div class="row">
    <h4 class="mt-2">Форма</h4>
    <form>
        <fieldset>
            <div class="row">
                <div class="col-6">
                    <select asp-items="@ViewData["Lst"] as SelectList"></select>
                </div>
                <div class="col-6">
                    <div>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" id="checkb1">
                            <label class="form-check-label" for="checkb1">
                                Чек-бокс 1
                            </label>
                        </div>
                    </div>
                    <div>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" id="checkb2">
                            <label class="form-check-label" for="checkb2">
                                Чек-бокс 2
                            </label>
                        </div>
                    </div>
                    <div class="d-flex">
                        <div class="form-check me-3">
                            <input class="form-check-input" type="radio" name="flexRadioDefault" id="flexRadioDefault1" checked>
                            <label class="form-check-label" for="flexRadioDefault1">
                                Радио-1
                            </label>
                        </div>
                        <div class="form-check me-3">
                            <input class="form-check-input" type="radio" name="flexRadioDefault" id="flexRadioDefault2">
                            <label class="form-check-label" for="flexRadioDefault2">
                                Радио-2
                            </label>
                        </div>
                        <div class="form-check me-3">
                            <input class="form-check-input" type="radio" name="flexRadioDefault" id="flexRadioDefault3">
                            <label class="form-check-label" for="flexRadioDefault3">
                                Радио-3
                            </label>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-6">
                    <div class="mb-3">
                        <label for="exampleInputLogin1" class="form-label">Логин</label>
                        <input type="text" class="form-control" id="exampleInputLogin1" placeholder="Введите имя" aria-describedby="LoginHelp">
                    </div>
                    <div class="mb-3">
                        <label for="exampleInputPassword1" class="form-label">Пароль</label>
                        <input type="password" class="form-control" id="exampleInputPassword1" placeholder="Введите пароль" aria-describedby="PasswordHelp">
                    </div>
                    <button class="btn btn-primary">Отправить</button>
                </div>
                <div class="col-6">
                </div>
            </div>
        </fieldset>
    </form>
</div>